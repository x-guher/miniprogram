<view data-weui-theme="{{theme}}">
  <form bindsubmit="submit">
    <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
      <image class="avatar" src="{{avatar}}"><input type="text" name="avatar" value="{{ avatar }}"/></image>
    </button>
    <mp-form>
      <mp-cells>
        <mp-cell title="昵称">
          <input type="nickname" name="nickname" class="weui-input" placeholder="{{nickname}}" value="{{nickname}}" />
        </mp-cell>
        <mp-cell title="Slogan">
          <input type="text" name="slogan" class="weui-input" placeholder="Coding My Life..." value="{{slogan}}" />
        </mp-cell>
      </mp-cells>
    </mp-form>
    <view class="weui-form__opr-area submit">
      <button type="primary" form-type="submit">修改</button>
    </view>
  </form>
</view>